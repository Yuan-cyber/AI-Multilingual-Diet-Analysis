source 'https://rubygems.org'

ruby '>= 2.6.0'

# Web framework
gem 'sinatra', '~> 3.0'
gem 'sinatra-cors', '~> 1.2'

# Database
gem 'sqlite3', '~> 1.6'
gem 'sequel', '~> 5.73'

# Authentication
gem 'jwt', '~> 2.7'
gem 'bcrypt', '~> 3.1'

# HTTP client for API calls
gem 'faraday', '~> 2.7'

# JSON handling
gem 'json', '~> 2.6'

# Development and test
group :development, :test do
  gem 'rspec', '~> 3.12'
  gem 'rack-test', '~> 2.1'
  gem 'pry', '~> 0.14'
end

# Production
group :production do
  gem 'puma', '~> 6.4'
end 

gem 'dotenv', '~> 2.8' 